<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="app.there.shouldbe"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="app.there.shouldbe.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.there.shouldbe.TapActivity"
            android:label="@string/tap_location" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.there.shouldbe.MainActivity" />
        </activity>
        <activity
            android:name="app.there.shouldbe.GeneralPostActivity"
            android:label="@string/post_wall" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.there.shouldbe.MainActivity" />
        </activity>
        <activity
            android:name="app.there.shouldbe.TwitterFeedActivity"
            android:label="@string/title_activity_twitter_feed" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.there.shouldbe.MainActivity" />
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- <activity
            android:name="app.there.shouldbe.TwitterLoginActivity"
            android:label="@string/title_activity_twitter_login"
            android:parentActivityName="app.there.shouldbe.MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.there.shouldbe.MainActivity" /> 
        </activity> -->
        
        <!-- Allow the Settings activity to be launched --> 
		<activity android:name=".Settings" android:label="Settings"
		    android:parentActivityName="aemperor.tictactoe.AndroidTicTacToe">
		    <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.there.shouldbe.MainActivity" />
		    <intent-filter>
            	<action android:name   = "android.intent.action.VIEW" />
            	<category android:name="android.intent.category.DEFAULT" />
            	<category android:name="android.intent.category.BROWSABLE" />
            	<data android:scheme="shouldbe" android:host="tweet" />
        	</intent-filter>
		</activity> 
    </application>

</manifest>
