<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_layout" >

<!-- Transparent intro tutorial -->
<android.support.v4.view.ViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />

<LinearLayout
    android:id="@+id/top_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#88666666" >
    
    <ImageView
        android:id="@+id/mapInstruction"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center_horizontal"
        android:src="@drawable/intro_map" />
    

    <ImageView
        android:id="@+id/vInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:scaleType="center"
        android:src="@drawable/intro_post" />

    <ImageView
        android:id="@+id/settingsInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:src="@drawable/intro_settings" />


<!--     <ImageView
        android:id="@+id/ivInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:paddingLeft="20dip"
        android:paddingTop="10dp"
        android:scaleType="center"
        android:src="@drawable/intro_wall" /> -->

</LinearLayout>
    
</FrameLayout>