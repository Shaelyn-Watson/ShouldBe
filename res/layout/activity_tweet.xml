<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="app.there.shouldbe.TweetActivity"
    tools:ignore="MergeRootFrame" 
    android:background="@drawable/blank_background"  >

   <TextView
       android:id="@+id/thereSB"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
       android:textSize="16sp"
       android:paddingLeft="9.89dp"
	   android:paddingRight="9.89dp"
	   android:paddingTop="9.89dp"
	   android:paddingBottom="9.89dp"
       android:background="@drawable/official_background1"
       android:text="@string/there_sb" />
   
   
      <EditText
       android:id="@+id/tweetET"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/thereSB"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="40dp"
       android:ems="10"
       android:paddingLeft="16dp"
       android:paddingRight="16dp"
       android:inputType="text"
       android:imeOptions="actionDone"
       android:hint="a healthy foodtruck"
       android:maxLength="112" />
   

   <Button
       android:id="@+id/postButton"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/tweetET"
       android:layout_marginTop="15dp"
       android:background="@drawable/official_background"
       android:paddingBottom="9.89dp"
       android:paddingLeft="9.89dp"
       android:paddingRight="9.89dp"
       android:paddingTop="9.89dp"
       android:text="@string/account" />

</RelativeLayout>
