<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
	android:paddingRight="9.89dp"
	android:paddingTop="16dp"
	android:paddingBottom="16dp"
    android:background="@drawable/blank_background" >

    <TextView
        android:id="@+id/posted_tweet"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:textSize="17sp" />



    <Button
        android:id="@+id/likeButton" 
        android:layout_width="50dp"
       	android:layout_height="50dp"
       	android:paddingLeft="4.58dp"
       	android:layout_toRightOf="@+id/posted_tweet" />

    <TextView
         android:id="@+id/like_count"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="likes"
         android:paddingLeft="4.58dp"
         android:textSize="12sp"
         android:layout_alignRight="@+id/likeButton"
         android:layout_below="@+id/likeButton" />



</RelativeLayout>