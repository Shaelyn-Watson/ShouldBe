<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@drawable/official_background1" >
    
    <TextView android:id="@+id/tweet_name1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:minHeight="8dp"
	    android:padding="5dp"
	    android:textColor="@android:color/black"
	    android:textSize="15sp" 
	    android:layout_alignParentLeft="true" >
	</TextView>


	<ImageButton
        android:id="@+id/wall_like_button1" 
        android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:src="@drawable/like"
       	android:paddingRight="10dp"
    	android:paddingLeft="10dp"
    	android:paddingTop="0dp"
    	android:paddingBottom="0dp"
    	android:layout_toRightOf="@+id/tweet_name1" />
    	
	    
	<TextView
         android:id="@+id/wall_like_count1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textSize="12sp" 
         android:paddingRight="10dp"
    	 android:paddingLeft="10dp"
    	 android:paddingTop="0dp"
    	 android:paddingBottom="0dp"
         android:layout_toRightOf="@+id/wall_like_button1" /> 

</RelativeLayout>